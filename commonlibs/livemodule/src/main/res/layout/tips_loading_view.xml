<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:layout_gravity="center"
    android:background="@drawable/shape_tips_bg"
    android:gravity="center">

    <ImageView
        android:id="@+id/tips_loading_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="18dp"
        android:background="@drawable/loading_animation" />

    <TextView
        android:id="@+id/tips_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="45dp"
        android:text="正在切换，请稍等"
        android:textColor="@color/write_color_selector"
        android:textSize="15sp" />

</LinearLayout>