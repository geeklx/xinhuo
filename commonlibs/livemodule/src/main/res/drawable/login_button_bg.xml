<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPilotButtonPressBg" />
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <!--<solid android:color="@color/colorPilotButtonBg" />-->
            <gradient android:angle="180" android:endColor="#ff5723" android:startColor="#ff9049" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <!--<solid android:color="#CCff6633" />-->
            <gradient android:angle="180" android:endColor="#ff9049" android:startColor="#FF9c7a" />
            <corners android:radius="24dp" />
        </shape>
    </item>
</selector>