<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/udesk_item_location"
    android:layout_width="@dimen/udesk_220"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:visibility="gone">

    <TextView
        android:id="@+id/postion_value"
        android:layout_width="@dimen/udesk_200"
        android:layout_height="@dimen/udesk_40"
        android:ellipsize="end"
        android:gravity="left|center"
        android:paddingLeft="@dimen/udesk_10"
        android:paddingRight="@dimen/udesk_10"
        android:singleLine="true"
        android:textColor="@color/udesk_edit_input_msg_cololr1"
        android:textSize="@dimen/udesk_sp16" />

    <ImageView
        android:id="@+id/udesk_location_image"
        android:layout_width="@dimen/udesk_220"
        android:layout_height="@dimen/udesk_140"
        android:layout_below="@+id/postion_value"
        android:scaleType="centerCrop"
        />


</RelativeLayout>
