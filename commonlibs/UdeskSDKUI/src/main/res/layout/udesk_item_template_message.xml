<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/udesk_item_template_msg"
    android:orientation="vertical"
    android:layout_width="@dimen/udesk_310"
    android:layout_height="wrap_content"
    android:background="@drawable/udesk_im_txt_left_default"
    android:visibility="gone">

        <TextView
            android:id="@+id/udesk_template_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/udesk_14"
            android:paddingRight="@dimen/udesk_14"
            android:paddingTop="10dp"
            android:paddingBottom="@dimen/udesk_10"
            android:textColor="@color/udesk_color_212121"
            android:textSize="@dimen/udesk_sp14"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/udesk_1"
            android:background="@color/udesk_color_E8ECED"
            />
        <cn.udesk.rich.XRichText
            android:id="@+id/udesk_template_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/udesk_14"
            android:lineSpacingExtra="3dip"
            android:textColor="@color/udesk_color_212121"
            android:textColorLink="@color/udesk_color_im_text_left1"
            android:textSize="@dimen/udesk_sp14"
            />
        <TextView
            android:id="@+id/udesk_template_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/udesk_1"
            android:background="@color/udesk_color_E8ECED"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/udesk_template_container"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/udesk_45"
            android:gravity="center_vertical"
            android:visibility="gone"/>
</LinearLayout>