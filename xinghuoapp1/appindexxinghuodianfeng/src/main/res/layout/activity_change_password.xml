<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_ffffff"
        app:navigationIcon="@mipmap/ic_back"
        app:title="" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="60dp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_change_password"
        android:textColor="@color/color_1e1e1e"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:background="@color/color_ffffff"
        android:gravity="center_vertical"
        android:textColor="@color/color_1e1e1e"
        android:textSize="15sp"
        tools:text="15666666666" />

    <View
        android:layout_width="295dp"
        android:layout_height="0.5dp"
        android:background="@drawable/divider" />

    <LinearLayout
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:paddingEnd="5dp">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/color_ffffff"
            android:gravity="center_vertical"
            android:hint="请输入短信验证码"
            android:inputType="number"
            android:textColor="@color/color_1e1e1e"
            android:textColorHint="@color/color_cccccc"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_code"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_shape_25_1482ff"
            android:gravity="center"
            android:onClick="code"
            android:text="获取验证码"
            android:textColor="@color/color_1482ff"
            android:textSize="12sp" />
    </LinearLayout>


    <View
        android:layout_width="295dp"
        android:layout_height="0.5dp"
        android:background="@drawable/divider" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="295dp"
            android:layout_height="50dp"
            android:background="@color/color_ffffff"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="@color/color_1e1e1e"
            android:textColorHint="@color/color_cccccc"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="5dp"
            android:onClick="hide"
            android:src="@drawable/ic_eye" />
    </FrameLayout>

    <View
        android:layout_width="295dp"
        android:layout_height="0.5dp"
        android:background="@drawable/divider" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <Button
        android:id="@+id/bt_complete"
        android:layout_width="295dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_shape_5_1482ff_abaeb0"
        android:enabled="false"
        android:onClick="complete"
        android:text="@string/complete"
        android:textColor="@color/color_ffffff"
        android:textSize="15sp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="15dp" />


</LinearLayout>