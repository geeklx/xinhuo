<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_img"
        android:layout_width="105dp"
        android:layout_height="137dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:src="@drawable/default_book" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_5_80000000"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/icon_book_close"
                android:drawablePadding="4dp"
                android:text="删除"
                android:textColor="@android:color/white"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="巅峰训练巅峰训练巅峰训练巅峰训练巅峰训练"
        android:textColor="@color/color_333333"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="@+id/cv_img"
        app:layout_constraintRight_toRightOf="@id/cv_img"
        app:layout_constraintTop_toBottomOf="@+id/cv_img" />
</androidx.constraintlayout.widget.ConstraintLayout>