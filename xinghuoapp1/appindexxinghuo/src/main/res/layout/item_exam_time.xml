<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="17dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/shape_12_f9fafc"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ff222222"
                android:textSize="14sp"
                android:text="距离 "></TextView>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ff222222"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="2022年12月四级英语考试"></TextView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="@drawable/shape_12_ff"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="还剩"
                android:textColor="#ff222222"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/num_0"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/icon_num_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="#ff008aff"
                android:textSize="36sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/num_1"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/icon_num_bg"
                android:gravity="center"

                android:text="1"
                android:textColor="#ff008aff"
                android:textSize="36sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/num_2"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/icon_num_bg"
                android:gravity="center"

                android:text="6"
                android:textColor="#ff008aff"
                android:textSize="36sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/num_3"
                android:layout_width="45dp"
                android:layout_height="55dp"
                android:layout_marginRight="3dp"
                android:background="@drawable/icon_num_bg"
                android:gravity="center"

                android:text="1"
                android:textColor="#ff008aff"
                android:textSize="36sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="天"
                android:textColor="#ff222222"
                android:textSize="20sp"
                android:textStyle="bold"></TextView>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>