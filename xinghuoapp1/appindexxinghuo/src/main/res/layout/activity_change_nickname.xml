<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:title="">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:onClick="onBack"
            android:src="@mipmap/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/title_activity_change_nickname"
            android:textColor="@color/color_222"
            android:textSize="18dp"
            android:textStyle="bold" />


    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp">

        <EditText
            android:id="@+id/et_nickname"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/bg_shape_e6e6e6"
            android:paddingStart="10dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            android:textColor="@color/color_222"
            android:textColorHint="@color/color_cccccc"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:textSize="15dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="15dp"
            android:onClick="delete"
            android:src="@drawable/ic_delete" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/ic_mark"
        android:drawablePadding="6dp"
        android:text="昵称需输入2-14个字"
        android:textColor="@color/color_c3c7cb"
        android:textSize="11dp" />

    <Button
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="end"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="15dp"
        android:alpha="0.4"
        android:background="@drawable/bg_shape_5_4c84ff"
        android:onClick="save"
        android:text="@string/save"
        android:textColor="@color/color_ffffff"
        android:textSize="15dp" />
</LinearLayout>