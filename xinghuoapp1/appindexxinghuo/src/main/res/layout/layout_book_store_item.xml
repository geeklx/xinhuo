<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            app:cardBackgroundColor="@color/color_f5"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/img_book_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/cv_img"
            android:ellipsize="end"
            android:maxLines="2"
            android:lineSpacingMultiplier="1.2"
            android:text="备战空间的看能否多空间看到房价肯定快递费看到发接口"
            android:textColor="@color/color_222831"
            android:textSize="15dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignLeft="@+id/rl_books"
            android:layout_alignParentBottom="true"
            android:background="@color/color_edeff0" />

        <RelativeLayout
            android:id="@+id/rl_books"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="14dp">

            <LinearLayout
                android:id="@+id/ll_tags"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_toLeftOf="@+id/tv_saleNum"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/tv_saleNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="已有6666人购买"
                android:textColor="@color/color_8e"
                android:textSize="11dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_disprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rl_books"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="7dp"
            android:text="￥666"
            android:textColor="@color/color_ff7100"
            android:textSize="15dp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>