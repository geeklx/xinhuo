<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.word.detail.WordDetailFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="15dp"
            android:paddingTop="45dp"
            android:paddingEnd="15dp"
            android:paddingBottom="18dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color_222"
                android:textSize="27dp"
                android:textStyle="bold"
                tools:text="asdasd" />

            <ImageView
                android:id="@+id/iv_new_word"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_new_word" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_yb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableBottom="@drawable/ic_back_play"
            android:drawablePadding="10dp"
            android:textColor="@color/color_c3c7cb"
            android:textSize="18dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/divider" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="单词释义"
            android:textColor="@color/color_222"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tv_translation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/color_222831"
            android:textSize="14dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/divider" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="例句"
            android:textColor="@color/color_222831"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tv_liju"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:lineSpacingMultiplier="1.5"
            android:textColor="@color/color_222831"
            android:textSize="14dp" />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>