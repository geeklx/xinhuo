<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <TextView
            android:id="@+id/tv_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/icon_detail_sort"
            android:paddingLeft="2dp"
            android:paddingTop="2dp"
            android:text="02"
            android:textColor="@color/color_8e"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_title_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/iv_download"
            android:layout_toRightOf="@+id/tv_sort"
            android:singleLine="true"
            android:text="图书名称"
            android:textColor="#222831"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="45dp"
            android:background="#edeff0" />

        <com.mersens.view.CircleNumberProgressBar
            android:id="@+id/pb_book_res"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:max="100"
            android:progress="0"
            app:circleprogress_reache_color="#1482ff"
            app:circleprogress_text_color="#fff"
            app:circleprogress_unreache_color="#cbcbcb" />

        <ImageView
            android:id="@+id/iv_download"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_download_start" />
    </RelativeLayout>
</RelativeLayout>