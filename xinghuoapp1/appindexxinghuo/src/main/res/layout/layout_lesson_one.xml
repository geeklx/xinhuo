<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_title_one"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:text="一级标题一级标题一级标题一级标题一级标题一级标题一级标题一级标题一级标题"
        android:textColor="@color/color_222"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_learned_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/icon_learned_one"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title_one"
        app:layout_constraintLeft_toRightOf="@+id/tv_title_one"
        app:layout_constraintTop_toTopOf="@+id/tv_title_one" />

    <ImageView
        android:id="@+id/img_toggle_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:src="@drawable/icon_one"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title_one"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title_one" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rlv_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_one" />

</androidx.constraintlayout.widget.ConstraintLayout>