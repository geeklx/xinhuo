<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f5f5f9"
        android:paddingLeft="20dp"
        android:text="06月09日"
        android:paddingTop="25dp"
        android:paddingBottom="15dp"
        android:textColor="@color/color_222"
        android:textSize="17dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time">

        <ImageView
            android:id="@+id/img_cover"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_qrcode"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="二维码码名称"
            android:textColor="@color/color_222"
            android:textSize="14dp"
            app:layout_constraintLeft_toRightOf="@+id/img_cover"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_cover" />

        <TextView
            android:id="@+id/tv_go"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/shape_10_5467ff"
            android:gravity="center"
            android:text="立即进入"
            android:textColor="@android:color/white"
            android:textSize="11dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <TextView
            android:id="@+id/tv_pic"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape_10_e8ebff"
            android:gravity="center"
            android:text="查看原图"
            android:textColor="@color/color_5467ff"
            android:textSize="11dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_go"
            app:layout_constraintTop_toTopOf="@+id/tv_go" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:background="@color/color_edeff0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>