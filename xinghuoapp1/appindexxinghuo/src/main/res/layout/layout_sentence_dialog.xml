<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/temp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="定位标签"
        android:text="English"
        android:textSize="15dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="@+id/tv_en"
        app:layout_constraintTop_toTopOf="@+id/tv_en" />

    <TextView
        android:id="@+id/tv_en"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="25dp"
        android:text=""
        android:textColor="@drawable/color_008aff_222"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_collect"
        android:layout_width="45dp"
        android:layout_height="18dp"
        android:background="@drawable/shape_9_ffc800"
        android:gravity="center"
        android:text="已标记"
        android:textColor="@android:color/white"
        android:textSize="11dp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/temp1"
        app:layout_constraintLeft_toLeftOf="@id/temp1"
        app:layout_constraintTop_toTopOf="@+id/temp1" />

    <TextView
        android:id="@+id/tv_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="1"
        android:textColor="@color/color_c4cbde"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/temp1"
        app:layout_constraintRight_toLeftOf="@+id/temp1"
        app:layout_constraintTop_toTopOf="@+id/temp1" />

    <TextView
        android:id="@+id/tv_ch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@color/color_afb3bf"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_en"
        app:layout_constraintRight_toRightOf="@+id/tv_en"
        app:layout_constraintTop_toBottomOf="@+id/tv_en" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="66:66"
        android:textColor="@color/color_afb3bf"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_en"
        app:layout_constraintTop_toBottomOf="@+id/tv_ch" />

    <View
        android:id="@+id/temp2"
        android:layout_width="2dp"
        android:layout_height="10dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/shape_edeff0"
        app:layout_constraintBottom_toBottomOf="@+id/tv_time"
        app:layout_constraintLeft_toRightOf="@+id/tv_time"
        app:layout_constraintTop_toTopOf="@+id/tv_time" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="已听666次"
        android:textColor="@color/color_afb3bf"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_time"
        app:layout_constraintLeft_toRightOf="@+id/temp2"
        app:layout_constraintTop_toTopOf="@+id/tv_time" />
</androidx.constraintlayout.widget.ConstraintLayout>