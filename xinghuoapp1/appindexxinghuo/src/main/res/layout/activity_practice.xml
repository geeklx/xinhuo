<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    tools:context="tuoyan.com.xinghuo_dayingindex.ui.practice.PracticeActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_practice"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:navigationIcon="@mipmap/ic_back">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableRight="@drawable/arr_down"
            android:drawablePadding="2dp"
            android:text="四级"
            android:textColor="#222831"
            android:textSize="18dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="10dp"
        android:text="提分练习"
        android:textColor="#222831"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="10dp"
        android:text="专业·让学习简单"
        android:textColor="#c3c7cb"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_model1"
            android:layout_width="170dp"
            android:layout_height="227dp"
            android:background="@drawable/bg_practice1"
            android:gravity="center_horizontal"
            android:onClick="onBegin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="113dp"
                android:text="专项练习"
                android:textColor="#222831"
                android:textSize="18dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_btn_practice"
                android:gravity="center"
                android:text="开始训练"
                android:textColor="#4c84ff"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_model2"
            android:layout_width="170dp"
            android:layout_height="227dp"
            android:background="@drawable/bg_practice2"
            android:gravity="center_horizontal"
            android:onClick="onBegin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="113dp"
                android:text="全真考场"
                android:textColor="#222831"
                android:textSize="18dp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape_btn_practice"
                android:gravity="center"
                android:text="开始挑战"
                android:textColor="#4c84ff"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
