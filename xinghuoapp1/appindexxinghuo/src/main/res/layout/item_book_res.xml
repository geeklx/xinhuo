<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/iv_download"
        android:drawablePadding="15dp"
        android:singleLine="true"
        android:textColor="#222831"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_book"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="5dp"
        android:textColor="#8d95a1"
        android:textSize="11dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_duration"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="15dp"
        android:background="#edeff0" />

    <com.mersens.view.CircleNumberProgressBar
        android:id="@+id/pb_book_res"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:max="100"
        android:progress="0"
        app:circleprogress_reache_color="#1482ff"
        app:circleprogress_text_color="#fff"
        app:circleprogress_unreache_color="#cbcbcb" />

    <ImageView
        android:id="@+id/iv_download"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_download_start" />

</RelativeLayout>