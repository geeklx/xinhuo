<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_top_15_fff">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="分享至"
        android:textColor="@color/color_222"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_sina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/ic_sina"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="新浪微博"
        android:textColor="@color/color_222"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_wx"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_wx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/ic_we_chat"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="微信"
        android:textColor="@color/color_222"
        android:textSize="13dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_sina"
        app:layout_constraintRight_toLeftOf="@+id/tv_wx_friends"
        app:layout_constraintTop_toTopOf="@+id/tv_sina" />

    <TextView
        android:id="@+id/tv_wx_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/ic_we_chat_friends"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="朋友圈"
        android:textColor="@color/color_222"
        android:textSize="13dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_wx"
        app:layout_constraintRight_toLeftOf="@+id/tv_wx_collect"
        app:layout_constraintTop_toTopOf="@+id/tv_sina" />

    <TextView
        android:id="@+id/tv_wx_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/icon_wx_collect"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="微信收藏"
        android:textColor="@color/color_222"
        android:textSize="13dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_wx_friends"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_sina" />

    <TextView
        android:id="@+id/tv_qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawableTop="@mipmap/ic_qq"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="QQ"
        android:textColor="@color/color_222"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_sina"
        app:layout_constraintRight_toRightOf="@+id/tv_sina"
        app:layout_constraintTop_toBottomOf="@+id/tv_sina" />

    <TextView
        android:id="@+id/tv_zome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/ic_qq_zome"
        android:drawablePadding="10dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="QQ空间"
        android:textColor="@color/color_222"
        android:textSize="13dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_wx"
        app:layout_constraintRight_toRightOf="@+id/tv_wx"
        app:layout_constraintTop_toTopOf="@+id/tv_qq" />

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:scaleType="center"
        android:src="@mipmap/icon_close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_qq" />
</androidx.constraintlayout.widget.ConstraintLayout>